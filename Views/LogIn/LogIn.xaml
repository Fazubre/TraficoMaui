<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TraficoCRFront.Views.LogIn.LogIn"
             Title="LogIn">
    <ContentPage.Content>
        
        <Grid RowDefinitions=".3*,.7*">
            <Image Aspect="AspectFill" Source="goon.png"/>
            <Grid BackgroundColor="#a693d0" Opacity=".9"/>
                <Grid ColumnDefinitions="*,*">
                    
                    <Image Aspect="AspectFit"
                           HeightRequest="120"
                           Source="googleMapsIcon.png"/>
                </Grid>
            <Grid Grid.Row="1">
                <RoundRectangle Margin="-5,-30,-5,-2"
                                CornerRadius="30,30,0,0"
                                Fill="White"/>
                
                    <VerticalStackLayout Margin="30,0,30,0">
                        <Label FontAttributes="Bold"
                               FontFamily="bold"
                               FontSize="Medium"
                               Text="Bienvenido!"
                               TextColor="Black"/>
                        <Label FontFamily="medium"
                               Text="Haga LogIn para Continuar"
                               TextColor="#A3A3A4"/>
                        
                   <Grid Margin ="0,30,0,0" ColumnDefinitions=".2*,.8*">
                       <RoundRectangle
                           BackgroundColor="#EDEBF6"
                           CornerRadius="10"
                           HeightRequest="70"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           WidthRequest="70"/>
                       <Image HorizontalOptions="Center">
                           <Image.Source>
                               <FontImageSource
                                   FontFamily="AwesomeSolid"
                                   Glyph="&#xf2bd;"
                                   Size="50"
                                   Color="#a693d0"
                                   />
                           </Image.Source>
                       </Image>
                       <Entry Grid.Column="1"
                              Placeholder="USUARIO"
                              Text="admin"
                              VerticalOptions="Center"/>
                   </Grid> 
                    
                        
                    <Grid Margin ="0,30,0,0" ColumnDefinitions=".2*,.8*">
                        <RoundRectangle
                            BackgroundColor="#EDEBF6"
                            CornerRadius="10"
                            HeightRequest="70"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            WidthRequest="70"/>
                        <Image HorizontalOptions="Center">
                            <Image.Source>
                                <FontImageSource
                                    FontFamily="AwesomeSolid"
                                    Glyph="&#xf084;"
                                    Size="50"
                                    Color="#a693d0"
                                />
                            </Image.Source>
                        </Image>
                        <Entry Grid.Column="1"
                               IsPassword="True"
                               Placeholder="CONTRASEÑA"
                               Text="123456"
                               VerticalOptions="Center"/>
                    </Grid> 
                        <Button
                            Margin="0,20,0,0"
                            BackgroundColor="#e97697"
                            HeightRequest="60"
                            Text="LogIn"
                            TextColor="#fffeee"/>
                        <Label
                            Margin="0,20,0,-10"
                            HorizontalOptions="Center"
                            Text="No tiene Usuario?"
                            TextColor="#7697e9"
                            TextDecorations="Underline"/>
                        
                        <Button
                            Margin="0,10,0,0"
                            BackgroundColor="White"
                            HeightRequest="60"
                            Text="Crear su Cuenta"
                            TextColor="#72253a "/>
                </VerticalStackLayout>
                </Grid>
            </Grid>
        
    </ContentPage.Content>
</ContentPage>